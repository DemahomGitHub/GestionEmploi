<div class="row" ng-controller="GestionEmploiCtrl">

    <fieldset>
        <legend>Encodez un nouvel emploi </legend>

        <label for="Id_Emploi" style="width:120px"> ID Emploi </label>
        <input id="Id_Emploi" name="IdEmploi" type="number" size="17" required ng-model="idEmploi" /> <br />

        <label for="Date_Entree" style="width:120px"> Date d'entree </label>
        <input id="Date_Entree" name="DateEntree" type="date" required ng-model="dateEntree" /> <br />

        <label for="Date_Sortie" style="width:120px"> Date de sortie </label>
        <input id="Date_Sortie" name="DateSortie" type="date" ng-model="dateSortie" /> <br />

        @*<label for="Dossier" style="width:120px"> Numéro dossier </label>
            <input id="Dossier" name="Dossier" type="number" size="17" ng-model="numDossier" /> <br />*@

        <label for="Travailleur" style="width:120px"> Travailleur </label>
        <select ng-model="numDossier">
            <option name="Travailleur" ng-repeat="travailleur in travailleurs" selected="selected" value="{{travailleur.numDossier}}">
                {{travailleur.idPersonne}}
            </option>
        </select>
        <br /> <br />
        <button class="btn btn-primary" ng-click="ajouterEmploi()"> Ajouter </button>
        <br /><br /> <br /> <br />
    </fieldset>

    <table class="table table-striped">
        <thead>
            <tr>
                <td><b>ID Emploi</b></td>
                <td><b>Date Entrée</b></td>
                <td><b>Date Sortie</b></td>
                <td><b>Dossier</b></td>
            </tr>
        </thead>
        <tbody>
            <tr class="text-left" ng-repeat="emploi in emplois">
                <td>{{emploi.idEmploi}}</td>
                <td>{{emploi.dateEntree}}</td>
                <td>{{emploi.dateSortie}}</td>
                <td>{{emploi.numDossier}}</td>
                <td><button class="btn btn-danger" ng-click="supprimerEmploi(emploi.idEmploi)">x</button></td>
            </tr>
        </tbody>
    </table>
</div>
